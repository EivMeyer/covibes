{
  "watch": ["src", "prisma"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "logs",
    "*.log",
    ".git",
    ".env",
    "coverage",
    "tests",
    "/home/*/.covibes/**",
    "../client/**",
    "../../**"
  ],
  "exec": "tsx",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "500"
}